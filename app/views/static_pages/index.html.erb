<% provide(:title, 'Welcome') %>
<div class="row">
  <% @articles.each_slice(2) do |article| %>
    <div class="col-md-6">
      <h2 class="text-center">Latest From My Blog</h2>
      <% article.each do |article| %>
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title"><%= article.title %></h3>
        </div>
        <div class="panel-body">
          <p> <%= article.description.truncate(100) %>
          <%= link_to "Read More >>", article_path(article), title: "Read more about this post", class: "btn btn-link" %>
          </p>
          
        </div>
        <div class="panel-footer"><small>Posted <%= time_ago_in_words(article.created_at) -%> ago by: <strong><%= article.user.firstname -%></strong></div>
      </div>
      <% end -%>
    <% end -%>
      </div>





  <div class="col-md-6" id="portfolio">
    <h2 class="text-center">My Recent Works</h2>
    <div class="row">
      <div class="col-md-6">
      <%= image_tag 'project-01.png', alt: "Global EduTech Trading & Consultancy", class: "img-thumbnail" -%>
      </div>

      <div class="col-md-6">
      <%= image_tag 'project-03.png', alt: "Wordpress Development", class: "img-thumbnail" -%>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6">
      <%= image_tag 'afro-project.png', alt: "Afro Asia Project", class: "img-thumbnail" -%>
      </div>

      <div class="col-md-6">
      <%= image_tag 'mySite.png', alt: "I am Yinka App", class: "img-thumbnail" -%>
      </div>
    </div>
  </div> 
</div>