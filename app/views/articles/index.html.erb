<% provide(:title, 'Articles') %>


<div class="row">
  <div class="col-sm-12">
    <h2 class="text-center" style="color: #fff;">All Articles Listing... <%= link_to "Post A New Article", new_article_path, class: "btn btn-custom btn-lg" %></h2>
  </div>
</div>


 <% @articles.each_slice(2) do |articles| %>
  

      <div class="row">
      <% articles.each do |article| %>
        <div class="col-md-6 blog-notice">
            
          <div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title"><%= article.title %></h3>
            </div>

            <div class="panel-body">
              <%= raw(article.description.truncate(100)) %>
                <%= link_to "Read More >>", article_path(article), title: "Read more about this post", class: "btn btn-link" %>
            </div><!-- end panel-body -->

            <div class="panel-footer"><small>Posted <%= time_ago_in_words(article.created_at) -%> ago by: <strong><%= article.user.firstname -%></strong></small>     
            </div>
          </div>

         </div>
      <% end %>
      </div>
    
  <% end %>








    
    
    
    <div class="text-center paginate">
      <nav aria-label="Page navigation">
        <ul class="pagination">
          <li>
            <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
          </li>
        </ul>
      </nav>
    </div>    
  
   