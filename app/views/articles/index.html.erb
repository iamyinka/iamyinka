
<div class="row">
  <h2 class="text-center" style="color: #fff;">All Post Listings... <%= link_to "Post A New Article", new_article_path, class: "btn btn-custom btn-lg" %></h2>
    <% if @articles.exists? -%>
      <% @articles.each_slice(2) do |article| %>
        
          <div class="col-md-6">
            <% article.each do |article| %>
              <div class="panel panel-default">
                <div class="panel-heading">
                  <h3 class="panel-title"><%= article.title %></h3>
                </div>
                <div class="panel-body">
                 <p> <%= article.description.truncate(100) %>
                  <%= link_to "Read More >>", article_path(article), title: "Read more about this post", class: "btn btn-link" %>
                  </p>
                  
                </div>
                <div class="panel-footer"><small>Posted <%= time_ago_in_words(article.created_at) -%> ago by: </small>     
                </div>
              </div>
            <% end -%>
          </div>
          <% end -%>
      </div>
    
    <% else -%>
    <p>No post to show</p>
    <% end -%>  
    
    <div class="text-center paginate">
      <nav aria-label="Page navigation">
        <ul class="pagination">
          <li>
            <%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
          </li>
        </ul>
      </nav>
    </div>    
  
   